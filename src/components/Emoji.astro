---
// @ts-ignore generated by typegen
import type { Icon as OneOfIcon } from "virtual:astro-icon";
import { Icon } from 'astro-icon/components';
import { getEmoji } from './emojiName';

interface Props {
  icon?: string | OneOfIcon;
  monochrome?: boolean;
  size?: string;
}

const { icon, monochrome = false, size= "1.999em" } = Astro.props;
const emojiName = getEmoji(`${icon}`, monochrome);
---

{/* @ts-ignore see https://github.com/natemoo-re/astro-icon/issues/213 */}
{icon && <Icon name={emojiName} size={size} />}